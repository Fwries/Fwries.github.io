img { vertical-align: middle; }

body { /* style for all */
	width: 100%;
    overflow-x: hidden;
	background: #111;
	font: 16px Arial;
	color: #FFF;
}

@media screen and (max-width: 1440px) {
	.topnav a:not(:first-child) {display: none;}
	.topnav a.icon {
		float: right;
		display: block;
	}
	.topnav.responsive {position: relative;}
	.topnav.responsive .icon {
		position: absolute;
		right: 0;
		top: 0;
	}
		.topnav.responsive a {
		float: none;
		display: block;
		text-align: left;
	}
}

@media screen and (max-width: 720px) {
	.topnav.responsive {position: relative;}
	.topnav.responsive .icon {
		position: absolute;
		right: 0;
		top: 0;
	}
		.topnav.responsive a {
		float: none;
		display: block;
		text-align: left;
	}
}

@media screen and (max-width: 540px) {
	.prev, .next, .text { font-size: 11px; }
	.ItemCarousel { width: 100%; }
}

.topnav {
  overflow: hidden;
  background-color: #333;
  position: relative;
}

.topnav a {
  float: left;
  display: block;
  color: #f2f2f2;
  text-align: center;
  padding: 14px 16px;
  text-decoration: none;
  font-size: 17px;
}

.topnav a:hover {
  background-color: #ddd;
  color: black;
}

.topnav a.active {
  background-color: #ff0000;
  color: white;
}

.topnav .icon {
  display: none;
}

.ItemCarousel { /* Slide container */
	grid-area: carousel;
	position: relative;
	margin: auto;
}

.Slide {
	display: none;
	position: relative;
	width: 100%;
	padding-bottom: 56.25%; 
	height: 0;
}

.SlideImg { /* resize Img */
	width: 100%;
	img.animated-gif {
		position: absolute;
		top:0;
		left: 0;
		width: 100%;
		height: 100%;
	}
	img {
		position: absolute;
		top:0;
		left: 0;
		width: 100%;
		height: 100%;
	}
}

.prev, .next { /* Next & previous buttons */
  cursor: pointer;
  position: absolute;
  top: 50%;
  width: auto;
  margin-top: -22px;
  padding: 16px;
  color: white;
  font-weight: bold;
  font-size: 18px;
  transition: 0.6s ease;
  border-radius: 0 3px 3px 0;
  user-select: none;
}

.next { /* reposition the buttonss */
  right: 0;
  border-radius: 3px 0 0 3px;
}

.prev:hover, .next:hover { /* Highlight when hover */
  background-color: rgba(0,0,0,0.8);
}

.fade { /* Fading animation */
  animation-name: fade;
  animation-duration: 1.5s;
}

@keyframes fade {
  from {opacity: .4} 
  to {opacity: 1}
}

.ItemHeader { 
	grid-area: header;
}

.HeaderImg {

}

.ItemMain{
	grid-area: main; 
	background-color: #333;
}

.ItemPic { 
	position: relative;
	width: 100%;
	padding-bottom: 56.25%; 
	height: auto;
	grid-area: pic;
	background-color: #333;
	.pic{ width: 100%; }
}

.ItemPic iframe{
  position: absolute;
  top:0;
  left: 0;
  width: 100%;
  height: 100%;
}

.grid-container-Index {
	display: grid;
	grid-template-areas:
	'carousel carousel carousel carousel carousel'
	'header header header header header'
	'pic pic pic pic pic'
	'main main main main main'
}